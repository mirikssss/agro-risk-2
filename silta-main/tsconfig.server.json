{
  "compilerOptions": {
    "target": "ES2020",
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "outDir": "dist-server",
    "rootDir": ".",
    "strict": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "declaration": false,
    "resolveJsonModule": true
  },
  "include": ["api/ai/**/*.ts", "lib/**/*.ts"],
  "exclude": ["node_modules"]
}
